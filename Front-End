===========================JS================================
let inputPrice = document.querySelector('.input-price');
let inputCashe = document.querySelector('.input-cash');
let button = document.querySelector('button');
let span = document.querySelector('.out-result');

button.onclick = function ()
{
    let price = inputPrice.value;
    let cashe = inputCashe.value;
    let result = cashe / price;
    span.innerHTML = result;
}

$(document).ready(function ()
{
    getPrice();
});

function getPrice()
{
    $.get(
        "https://api.coindesk.com/v1/bpi/currentprice.json",
        function (data)
        {
            let div = document.querySelector('.coindesk');
            data = JSON.parse(data);
            div.innerHTML = 'Курс BTC в данний час: ' + data.bpi.USD.rate + ' USD';
        }
    );
}
